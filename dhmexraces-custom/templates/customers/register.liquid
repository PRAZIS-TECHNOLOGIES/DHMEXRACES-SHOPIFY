{% comment %}
  Register Page for DHMEXRACES
  Professional design with brand colors
{% endcomment %}

<section class="register">
  <div class="register__container">
    <div class="register__content">

      <!-- Logo/Brand -->
      <div class="register__brand">
        <h1 class="register__logo">DHMEXRACES</h1>
        <p class="register__tagline">COPA SCOTT 2026</p>
      </div>

      <!-- Register Form -->
      <div class="register__form-wrapper">
        <h2 class="register__title">Crear Cuenta de Corredor</h2>
        <p class="register__subtitle">Únete al campeonato nacional de DH más grande de México</p>

        {% form 'create_customer' %}
          {% if form.errors %}
            <div class="register__errors">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <circle cx="10" cy="10" r="8" stroke="currentColor" stroke-width="2"/>
                <path d="M10 6V10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <circle cx="10" cy="14" r="0.5" fill="currentColor"/>
              </svg>
              <div class="register__errors-content">
                <h3 class="register__errors-title">Error al crear cuenta</h3>
                {{ form.errors | default_errors }}
              </div>
            </div>
          {% endif %}

          <div class="register__field">
            <label for="RegisterFirstName" class="register__label">
              <svg width="18" height="18" viewBox="0 0 20 20" fill="none">
                <circle cx="10" cy="7" r="4" stroke="currentColor" stroke-width="1.5"/>
                <path d="M3 18C3 14 6 12 10 12C14 12 17 14 17 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
              Nombre
            </label>
            <input
              type="text"
              name="customer[first_name]"
              id="RegisterFirstName"
              class="register__input"
              autocomplete="given-name"
              placeholder="Tu nombre"
              required>
          </div>

          <div class="register__field">
            <label for="RegisterLastName" class="register__label">
              <svg width="18" height="18" viewBox="0 0 20 20" fill="none">
                <circle cx="10" cy="7" r="4" stroke="currentColor" stroke-width="1.5"/>
                <path d="M3 18C3 14 6 12 10 12C14 12 17 14 17 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
              Apellido
            </label>
            <input
              type="text"
              name="customer[last_name]"
              id="RegisterLastName"
              class="register__input"
              autocomplete="family-name"
              placeholder="Tu apellido"
              required>
          </div>

          <div class="register__field">
            <label for="RegisterEmail" class="register__label">
              <svg width="18" height="18" viewBox="0 0 20 20" fill="none">
                <path d="M3 4L10 11L17 4M3 4H17V16H3V4Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Correo Electrónico
            </label>
            <input
              type="email"
              name="customer[email]"
              id="RegisterEmail"
              class="register__input"
              autocomplete="email"
              autocapitalize="off"
              placeholder="corredor@ejemplo.com"
              required>
          </div>

          <div class="register__field">
            <label for="RegisterPassword" class="register__label">
              <svg width="18" height="18" viewBox="0 0 20 20" fill="none">
                <rect x="4" y="9" width="12" height="9" rx="2" stroke="currentColor" stroke-width="1.5"/>
                <path d="M7 9V6C7 4.34315 8.34315 3 10 3C11.6569 3 13 4.34315 13 6V9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
              Contraseña
            </label>
            <input
              type="password"
              name="customer[password]"
              id="RegisterPassword"
              class="register__input"
              placeholder="Mínimo 8 caracteres"
              minlength="8"
              required>
          </div>

          <div class="register__benefits">
            <p class="register__benefits-title">Al crear tu cuenta tendrás acceso a:</p>
            <div class="register__benefit">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
                <path d="M16.6667 5L7.5 14.1667L3.33337 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Inscripciones rápidas a todas las sedes</span>
            </div>
            <div class="register__benefit">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
                <path d="M16.6667 5L7.5 14.1667L3.33337 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Seguimiento de puntos del campeonato</span>
            </div>
            <div class="register__benefit">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
                <path d="M16.6667 5L7.5 14.1667L3.33337 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>Historial de inscripciones y resultados</span>
            </div>
          </div>

          <button type="submit" class="register__submit">
            <span>Crear Cuenta</span>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        {% endform %}
      </div>

      <!-- Login Link -->
      <div class="register__login">
        <p class="register__login-text">¿Ya tienes cuenta?</p>
        <a href="{{ routes.account_login_url }}" class="register__login-link">
          Iniciar Sesión
          <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
            <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>

    </div>
  </div>
</section>

<style>
  :root {
    --color-primary: #E42C2C;
    --color-secondary: #0066B3;
    --color-gold: #FFD700;
    --color-success: #10B981;
    --color-error: #EF4444;
    --color-bg-dark: #000000;
    --color-bg-surface: #1A1A1A;
    --color-text-primary: #FFFFFF;
    --color-text-secondary: #A0A0A0;
    --color-border: rgba(255, 255, 255, 0.1);
  }

  .register {
    min-height: 100vh;
    background: var(--color-bg-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    position: relative;
    overflow: hidden;
  }

  .register::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle at 20% 80%, rgba(228, 44, 44, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(0, 102, 179, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }

  .register__container {
    max-width: 520px;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  .register__content {
    background: rgba(26, 26, 26, 0.8);
    border: 1px solid var(--color-border);
    border-radius: 24px;
    padding: 48px;
    backdrop-filter: blur(20px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .register__brand {
    text-align: center;
    margin-bottom: 40px;
  }

  .register__logo {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-text-primary);
    margin: 0 0 8px 0;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .register__tagline {
    font-size: 0.875rem;
    color: var(--color-gold);
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0;
  }

  .register__form-wrapper {
    margin-bottom: 32px;
  }

  .register__title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 8px 0;
    text-align: center;
  }

  .register__subtitle {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    text-align: center;
    margin: 0 0 32px 0;
    line-height: 1.5;
  }

  .register__field {
    margin-bottom: 20px;
  }

  .register__label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .register__label svg {
    color: var(--color-secondary);
  }

  .register__input {
    width: 100%;
    padding: 14px 16px;
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .register__input:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 3px rgba(0, 102, 179, 0.1);
  }

  .register__input::placeholder {
    color: rgba(255, 255, 255, 0.3);
  }

  .register__benefits {
    margin: 24px 0;
    padding: 20px;
    background: rgba(0, 102, 179, 0.05);
    border: 1px solid rgba(0, 102, 179, 0.2);
    border-radius: 12px;
  }

  .register__benefits-title {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-secondary);
    margin: 0 0 12px 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .register__benefit {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin-bottom: 8px;
  }

  .register__benefit:last-child {
    margin-bottom: 0;
  }

  .register__benefit svg {
    color: var(--color-success);
    flex-shrink: 0;
  }

  .register__submit {
    width: 100%;
    padding: 16px 24px;
    background: var(--color-secondary);
    border: none;
    border-radius: 12px;
    color: var(--color-text-primary);
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .register__submit:hover {
    background: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(228, 44, 44, 0.3);
  }

  .register__submit svg {
    transition: transform 0.3s ease;
  }

  .register__submit:hover svg {
    transform: translateX(4px);
  }

  .register__errors {
    display: flex;
    gap: 12px;
    padding: 16px;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 12px;
    color: var(--color-error);
    margin-bottom: 24px;
  }

  .register__errors svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .register__errors-content {
    flex: 1;
  }

  .register__errors-title {
    font-size: 0.875rem;
    font-weight: 700;
    margin: 0 0 4px 0;
  }

  .register__errors ul {
    margin: 0;
    padding: 0;
    list-style: none;
    font-size: 0.875rem;
  }

  .register__login {
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .register__login-text {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0 0 12px 0;
  }

  .register__login-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--color-gold);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .register__login-link:hover {
    color: var(--color-text-primary);
    gap: 10px;
  }

  .register__login-link svg {
    transition: transform 0.3s ease;
  }

  .register__login-link:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 640px) {
    .register {
      padding: 40px 16px;
    }

    .register__content {
      padding: 32px 24px;
    }

    .register__logo {
      font-size: 2rem;
    }

    .register__title {
      font-size: 1.5rem;
    }
  }
</style>
