    {
      "type": "range",
      "id": "image_position_y",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Posición Vertical",
      "default": 50,
      "info": "Mueve la imagen arriba (0%) o abajo (100%)"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "CTA Button Label",
      "default": "Ver todas las categorías"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "Race Registration",
      "category": "DHMEXRACES"
    }
  ]
}
{% endschema %}
