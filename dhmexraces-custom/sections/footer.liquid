{% stylesheet %}
  :root {
    --color-primary: #E42C2C;
    --color-secondary: #0066B3;
    --color-gold: #FFD700;
    --color-bg-dark: #000000;
    --color-bg-surface: #1A1A1A;
    --color-bg-elevated: #2A2A2A;
    --color-text-primary: #FFFFFF;
    --color-text-secondary: #A0A0A0;
    --color-border: rgba(255, 255, 255, 0.1);
    --color-border-accent: rgba(228, 44, 44, 0.3);
  }

  .footer {
    background: var(--color-bg-dark);
    border-top: 2px solid var(--color-primary);
    padding: 60px 0 30px;
    margin-top: 80px;
    position: relative;
  }

  .footer__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Top Section */
  .footer__top {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 60px;
    margin-bottom: 50px;
  }

  @media (max-width: 1024px) {
    .footer__top {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding: 40px 0 20px;
      margin-top: 60px;
    }

    .footer__container {
      padding: 0 16px;
    }

    .footer__top {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer__column--about .footer__heading {
      font-size: 1.2rem;
    }

    .footer__description {
      font-size: 0.875rem;
    }
  }

  /* Column */
  .footer__column {
    color: var(--color-text-secondary);
  }

  .footer__heading {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    position: relative;
    padding-bottom: 8px;
  }

  .footer__heading::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--color-primary);
  }

  .footer__column--about .footer__heading {
    font-size: 1.5rem;
    color: var(--color-text-primary);
  }

  .footer__description {
    font-size: 0.9rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 20px;
  }

  /* Stats */
  .footer__stats {
    display: flex;
    gap: 20px;
    margin-top: 20px;
  }

  .footer__stat {
    text-align: center;
  }

  .footer__stat-number {
    font-size: 2rem;
    font-weight: 900;
    color: var(--color-secondary);
    line-height: 1;
  }

  .footer__stat-label {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-top: 4px;
  }

  /* Links */
  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .footer__links a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer__links a:hover {
    color: var(--color-text-primary);
    padding-left: 4px;
  }

  .footer__date {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    margin-left: 8px;
    white-space: nowrap;
    opacity: 0.6;
  }

  /* Sedes específicas */
  .footer__links--sedes li {
    flex-wrap: nowrap;
    gap: 8px;
  }

  .sede-name {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  @media (max-width: 640px) {
    .footer__links--sedes li {
      flex-direction: column;
      align-items: flex-start;
      gap: 4px;
      padding: 12px 0;
      border-bottom: 1px solid var(--color-border);
    }

    .footer__links--sedes li:last-child {
      border-bottom: none;
    }

    .sede-name {
      font-size: 0.95rem;
      font-weight: 600;
      color: var(--color-text-primary);
    }

    .footer__date {
      margin-left: 0;
      font-size: 0.8rem;
      color: var(--color-gold);
      opacity: 1;
    }

    .footer__stats {
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
    }

    .footer__stat {
      min-width: 80px;
    }

    .footer__sponsors {
      padding: 20px 0;
      margin-bottom: 20px;
    }

    .footer__sponsors-list {
      font-size: 0.75rem;
      line-height: 1.8;
    }
  }

  /* Social */
  .footer__social {
    margin-top: 12px;
  }

  .footer__social-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: rgba(228, 44, 44, 0.1);
    border: 1px solid var(--color-border-accent);
    border-radius: 8px;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    background: rgba(228, 44, 44, 0.15);
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(228, 44, 44, 0.3);
  }

  .footer__social-link svg {
    color: var(--color-primary);
  }

  /* Contact */
  .footer__contact-info {
    margin-top: 8px;
  }

  .footer__contact-info a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .footer__contact-info a:hover {
    color: var(--color-text-primary);
  }

  /* Sponsors */
  .footer__sponsors {
    text-align: center;
    padding: 30px 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 30px;
    background: var(--color-bg-elevated);
  }

  .footer__sponsors-label {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 10px;
    opacity: 0.7;
  }

  .footer__sponsors-list {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    font-weight: 600;
    letter-spacing: 0.08em;
  }

  /* Bottom Section */
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid var(--color-border);
    margin-top: 30px;
  }

  @media (max-width: 640px) {
    .footer__bottom {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }
  }

  .footer__copyright p {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0;
    opacity: 0.6;
  }

  /* Powered by PRAZIS - Sutil y Profesional */
  .footer__powered {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  @media (max-width: 640px) {
    .footer__powered {
      flex-direction: column;
      gap: 4px;
    }
  }

  .footer__powered-text {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    margin: 0;
    opacity: 0.5;
  }

  .footer__powered-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(0, 102, 179, 0.1);
    border: 1px solid var(--color-secondary);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .footer__powered-link:hover {
    background: var(--color-secondary);
    border-color: var(--color-secondary);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 102, 179, 0.4);
  }

  .footer__powered-link svg {
    color: var(--color-secondary);
    width: 14px;
    height: 14px;
  }

  .footer__powered-brand {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-secondary);
    letter-spacing: 0.05em;
  }

  .footer__powered-link:hover .footer__powered-brand {
    color: var(--color-text-primary);
  }

  .footer__powered-link:hover svg {
    color: var(--color-text-primary);
  }

  /* Payment Icons (optional) */
  .footer__payment {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    margin-top: 20px;
  }

  .footer__payment svg {
    width: 40px;
    height: auto;
    opacity: 0.6;
  }
{% endstylesheet %}

