{% comment %}
  Registration Form for DHMEXRACES Participants
  One form per registration in cart
{% endcomment %}

<section class="reg-form">
  <div class="reg-form__container">
    <div class="reg-form__header" data-aos="fade-up">
      <h1 class="reg-form__title">Datos de Participantes</h1>
      <p class="reg-form__subtitle">Completa los datos de cada corredor</p>
    </div>

    {%- comment -%} Progress Indicator {%- endcomment -%}
    <div class="reg-form__progress" data-aos="fade-up" data-aos-delay="100">
      <div class="reg-form__progress-bar">
        <div class="reg-form__progress-fill" id="progressBar"></div>
      </div>
      <p class="reg-form__progress-text">
        Participante <span id="currentForm">1</span> de <span id="totalForms">1</span>
      </p>
    </div>

    {%- comment -%} Form Container {%- endcomment -%}
    <div class="reg-form__forms" id="formsContainer" data-aos="fade-up" data-aos-delay="200">
      {%- comment -%} Forms will be generated by JavaScript {%- endcomment -%}
    </div>

    {%- comment -%} Navigation Buttons {%- endcomment -%}
    <div class="reg-form__actions" data-aos="fade-up" data-aos-delay="300">
      <button type="button" class="reg-form__btn reg-form__btn--secondary" id="prevBtn" onclick="previousForm()" style="display: none;">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M16 10H4M4 10L10 16M4 10L10 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Anterior
      </button>

      <button type="button" class="reg-form__btn reg-form__btn--primary" id="nextBtn" onclick="nextForm()">
        Siguiente
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <button type="button" class="reg-form__btn reg-form__btn--primary" id="submitBtn" onclick="submitAllForms()" style="display: none;">
        Proceder al Pago
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M16.6667 5L7.50004 14.1667L3.33337 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</section>

<script>
  let cartData = [];
  let currentFormIndex = 0;
  let formsData = [];

  document.addEventListener('DOMContentLoaded', function() {
    // Get cart data from sessionStorage
    const storedCartData = sessionStorage.getItem('registrationCartData');

    if (!storedCartData) {
      alert('No hay datos del carrito. Redirigiendo...');
      window.location.href = '/cart';
      return;
    }

    cartData = JSON.parse(storedCartData);

    // Calculate total number of forms needed
    const totalForms = cartData.reduce((total, item) => total + item.quantity, 0);
    document.getElementById('totalForms').textContent = totalForms;

    // Generate forms
    generateForms();

    // Show first form
    showForm(0);
  });

  function generateForms() {
    const container = document.getElementById('formsContainer');
    let formIndex = 0;

    cartData.forEach((item, itemIndex) => {
      for (let i = 0; i < item.quantity; i++) {
        const formHTML = `
          <div class="reg-form__form" id="form-${formIndex}" style="display: none;">
            <div class="reg-form__form-header">
              <h3 class="reg-form__form-title">
                Participante ${formIndex + 1}
              </h3>
              <div class="reg-form__form-category">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                  <path d="M14 4L5.5 12.5L2 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                ${item.variant_title}
              </div>
            </div>

            <div class="reg-form__fields">
              <div class="reg-form__field-group">
                <label for="nombre-${formIndex}" class="reg-form__label">
                  Nombre Completo *
                </label>
                <input
                  type="text"
                  id="nombre-${formIndex}"
                  class="reg-form__input"
                  required
                  placeholder="Ej: Juan Pérez García">
              </div>

              <div class="reg-form__field-row">
                <div class="reg-form__field-group">
                  <label for="fecha-${formIndex}" class="reg-form__label">
                    Fecha de Nacimiento *
                  </label>
                  <input
                    type="date"
                    id="fecha-${formIndex}"
                    class="reg-form__input"
                    required>
                </div>

                <div class="reg-form__field-group">
                  <label for="equipo-${formIndex}" class="reg-form__label">
                    Equipo
                  </label>
                  <input
                    type="text"
                    id="equipo-${formIndex}"
                    class="reg-form__input"
                    placeholder="Nombre del equipo (opcional)">
                </div>
              </div>

              <div class="reg-form__field-row">
                <div class="reg-form__field-group">
                  <label for="email-${formIndex}" class="reg-form__label">
                    Correo Electrónico *
                  </label>
                  <input
                    type="email"
                    id="email-${formIndex}"
                    class="reg-form__input"
                    required
                    placeholder="correo@ejemplo.com">
                </div>

                <div class="reg-form__field-group">
                  <label for="telefono-${formIndex}" class="reg-form__label">
                    Teléfono *
                  </label>
                  <input
                    type="tel"
                    id="telefono-${formIndex}"
                    class="reg-form__input"
                    required
                    placeholder="5512345678">
                </div>
              </div>

              <div class="reg-form__field-row">
                <div class="reg-form__field-group">
                  <label for="emergencia_nombre-${formIndex}" class="reg-form__label">
                    Contacto de Emergencia *
                  </label>
                  <input
                    type="text"
                    id="emergencia_nombre-${formIndex}"
                    class="reg-form__input"
                    required
                    placeholder="Nombre del contacto">
                </div>

                <div class="reg-form__field-group">
                  <label for="emergencia_telefono-${formIndex}" class="reg-form__label">
                    Teléfono de Emergencia *
                  </label>
                  <input
                    type="tel"
                    id="emergencia_telefono-${formIndex}"
                    class="reg-form__input"
                    required
                    placeholder="5512345678">
                </div>
              </div>

              <div class="reg-form__field-group">
                <label class="reg-form__label">
                  Categoría
                </label>
                <div class="reg-form__category-display">
                  ${item.variant_title}
                </div>
                <input type="hidden" id="categoria-${formIndex}" value="${item.variant_title}">
              </div>
            </div>
          </div>
        `;

        container.innerHTML += formHTML;

        // Initialize empty data for this form
        formsData.push({
          variant_id: item.variant_id,
          variant_title: item.variant_title,
          product_title: item.product_title,
          nombre: '',
          fecha_nacimiento: '',
          equipo: '',
          email: '',
          telefono: '',
          emergencia_nombre: '',
          emergencia_telefono: '',
          categoria: item.variant_title
        });

        formIndex++;
      }
    });
  }

  function showForm(index) {
    // Hide all forms
    document.querySelectorAll('.reg-form__form').forEach(form => {
      form.style.display = 'none';
    });

    // Show current form
    const currentForm = document.getElementById(`form-${index}`);
    if (currentForm) {
      currentForm.style.display = 'block';
      currentFormIndex = index;

      // Update progress
      document.getElementById('currentForm').textContent = index + 1;
      const totalForms = formsData.length;
      const progress = ((index + 1) / totalForms) * 100;
      document.getElementById('progressBar').style.width = progress + '%';

      // Update button visibility
      document.getElementById('prevBtn').style.display = index > 0 ? 'flex' : 'none';
      document.getElementById('nextBtn').style.display = index < totalForms - 1 ? 'flex' : 'none';
      document.getElementById('submitBtn').style.display = index === totalForms - 1 ? 'flex' : 'none';

      // Populate form with saved data if exists
      populateForm(index);
    }
  }

  function populateForm(index) {
    const data = formsData[index];
    if (data.nombre) {
      document.getElementById(`nombre-${index}`).value = data.nombre;
      document.getElementById(`fecha-${index}`).value = data.fecha_nacimiento;
      document.getElementById(`equipo-${index}`).value = data.equipo;
      document.getElementById(`email-${index}`).value = data.email;
      document.getElementById(`telefono-${index}`).value = data.telefono;
      document.getElementById(`emergencia_nombre-${index}`).value = data.emergencia_nombre;
      document.getElementById(`emergencia_telefono-${index}`).value = data.emergencia_telefono;
    }
  }

  function saveCurrentForm() {
    const index = currentFormIndex;
    const nombre = document.getElementById(`nombre-${index}`).value.trim();
    const fecha = document.getElementById(`fecha-${index}`).value;
    const equipo = document.getElementById(`equipo-${index}`).value.trim();
    const email = document.getElementById(`email-${index}`).value.trim();
    const telefono = document.getElementById(`telefono-${index}`).value.trim();
    const emergencia_nombre = document.getElementById(`emergencia_nombre-${index}`).value.trim();
    const emergencia_telefono = document.getElementById(`emergencia_telefono-${index}`).value.trim();

    // Validation
    if (!nombre || !fecha || !email || !telefono || !emergencia_nombre || !emergencia_telefono) {
      alert('Por favor completa todos los campos obligatorios (*)');
      return false;
    }

    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
      alert('Por favor ingresa un correo electrónico válido');
      return false;
    }

    // Phone validation (basic)
    const phoneRegex = /^\d{10}$/;
    if (!phoneRegex.test(telefono.replace(/\s/g, ''))) {
      alert('Por favor ingresa un teléfono válido (10 dígitos)');
      return false;
    }

    // Emergency phone validation
    if (!phoneRegex.test(emergencia_telefono.replace(/\s/g, ''))) {
      alert('Por favor ingresa un teléfono de emergencia válido (10 dígitos)');
      return false;
    }

    // Save data
    formsData[index].nombre = nombre;
    formsData[index].fecha_nacimiento = fecha;
    formsData[index].equipo = equipo;
    formsData[index].email = email;
    formsData[index].telefono = telefono;
    formsData[index].emergencia_nombre = emergencia_nombre;
    formsData[index].emergencia_telefono = emergencia_telefono;

    return true;
  }

  function nextForm() {
    if (saveCurrentForm()) {
      showForm(currentFormIndex + 1);
    }
  }

  function previousForm() {
    saveCurrentForm(); // Save without validation
    showForm(currentFormIndex - 1);
  }

  function submitAllForms() {
    // Save last form
    if (!saveCurrentForm()) {
      return;
    }

    // Prepare data for checkout
    const registrationData = {
      registrations: formsData,
      timestamp: new Date().toISOString()
    };

    // Store in cart attributes
    fetch('/cart/update.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        attributes: {
          registration_data: JSON.stringify(registrationData)
        }
      })
    })
    .then(response => response.json())
    .then(() => {
      // Clear sessionStorage
      sessionStorage.removeItem('registrationCartData');

      // Redirect to checkout
      window.location.href = '/checkout';
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error al procesar. Intenta de nuevo.');
    });
  }
</script>

{% stylesheet %}
  .reg-form {
    min-height: 100vh;
    padding: 140px 24px 80px;
    background: #000000;
  }

  .reg-form__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .reg-form__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .reg-form__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 16px;
    letter-spacing: -0.02em;
  }

  .reg-form__subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Progress */
  .reg-form__progress {
    margin-bottom: 40px;
  }

  .reg-form__progress-bar {
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 12px;
  }

  .reg-form__progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), var(--color-gold));
    border-radius: 4px;
    transition: width 0.3s ease;
    width: 0%;
  }

  .reg-form__progress-text {
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .reg-form__progress-text span {
    color: var(--color-primary);
  }

  /* Form */
  .reg-form__form {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 40px;
    margin-bottom: 32px;
  }

  .reg-form__form-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    padding-bottom: 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .reg-form__form-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #FFFFFF;
  }

  .reg-form__form-category {
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(228, 44, 44, 0.1);
    border: 1px solid var(--color-border-accent);
    padding: 8px 16px;
    border-radius: 8px;
    color: var(--color-primary);
    font-weight: 600;
  }

  .reg-form__fields {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .reg-form__field-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .reg-form__field-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .reg-form__label {
    font-size: 0.85rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .reg-form__input {
    padding: 14px 16px;
    background: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .reg-form__input:focus {
    border-color: var(--color-primary);
    outline: none;
    box-shadow: 0 0 0 3px rgba(228, 44, 44, 0.1);
  }

  .reg-form__input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .reg-form__category-display {
    padding: 14px 16px;
    background: rgba(228, 44, 44, 0.1);
    border: 1px solid var(--color-border-accent);
    border-radius: 8px;
    color: var(--color-primary);
    font-weight: 600;
  }

  /* Actions */
  .reg-form__actions {
    display: flex;
    justify-content: space-between;
    gap: 20px;
  }

  .reg-form__btn {
    flex: 1;
    padding: 18px 32px;
    border: none;
    border-radius: 12px;
    font-size: 1.125rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
  }

  .reg-form__btn--primary {
    background: var(--color-primary);
    color: #000000;
  }

  .reg-form__btn--primary:hover {
    background: #E85050;
    transform: translateY(-2px);
    box-shadow: 0 12px 24px var(--color-border-accent);
  }

  .reg-form__btn--secondary {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.12);
    color: #FFFFFF;
  }

  .reg-form__btn--secondary:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.2);
  }

  /* Mobile */
  @media (max-width: 968px) {
    .reg-form {
      padding: 100px 16px 60px;
    }

    .reg-form__form {
      padding: 24px;
    }

    .reg-form__form-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .reg-form__field-row {
      grid-template-columns: 1fr;
    }

    .reg-form__actions {
      flex-direction: column;
    }
  }
{% endstylesheet %}

