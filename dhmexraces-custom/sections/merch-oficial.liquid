  <!-- Newsletter Section -->
  {% if section.settings.show_newsletter %}
    <div class="merch-newsletter" data-aos="fade-up">
      <div class="merch-newsletter__container">
        <div class="merch-newsletter__content">
          <h2>{{ section.settings.newsletter_title }}</h2>
          <p>{{ section.settings.newsletter_text }}</p>
        </div>
        <form class="merch-newsletter__form">
          <input type="email" placeholder="tu@email.com" required>
          <button type="submit">Suscribirse</button>
        </form>
      </div>
    </div>
  {% endif %}
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Parallax effect on scroll
    const hero = document.querySelector('.merch-hero');
    if (hero) {
      window.addEventListener('scroll', function() {
        const scrolled = window.pageYOffset;
        const heroContent = hero.querySelector('.merch-hero__content');
        if (heroContent && scrolled < 600) {
          heroContent.style.transform = `translateY(${scrolled * 0.3}px)`;
          heroContent.style.opacity = 1 - (scrolled / 600);
        }
      });
    }
  });
</script>

{% stylesheet %}
  /* ═══════════════════════════════════════════════════════════════
     MERCH OFICIAL - Premium Aesthetic Styles
     ═══════════════════════════════════════════════════════════════ */

  .merch-oficial {
    --merch-primary: #E42C2C;
    --merch-bg: #0a0a0a;
    --merch-surface: #141414;
    --merch-card: #1a1a1a;
    --merch-border: rgba(255, 255, 255, 0.08);
    --merch-text: #ffffff;
    --merch-text-muted: rgba(255, 255, 255, 0.6);
    --merch-gradient: linear-gradient(135deg, #E42C2C 0%, #ff4d4d 100%);

    background: var(--merch-bg);
    min-height: 100vh;
  }

  /* ═══════════════════════════════════════════════════════════════
     HERO SECTION - Compact Premium
     ═══════════════════════════════════════════════════════════════ */
  .merch-hero {
    position: relative;
    padding: 4rem 2rem 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-bottom: 1px solid rgba(34, 197, 94, 0.2);
  }

  .merch-hero__bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, #0a0a0a 0%, #0f0f0f 100%);
  }

  .merch-hero__bg::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    height: 300px;
    background: radial-gradient(ellipse, rgba(34, 197, 94, 0.15) 0%, transparent 70%);
    pointer-events: none;
  }

  .merch-hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
  }

  .merch-hero__badge {
    display: inline-block;
    background: transparent;
    border: 1px solid rgba(34, 197, 94, 0.4);
    color: #22C55E;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    padding: 0.4rem 1.2rem;
    border-radius: 2px;
    margin-bottom: 1rem;
  }

  .merch-hero__title {
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1;
    margin: 0 0 0.5rem 0;
    color: #fff;
  }

  .merch-hero__subtitle {
    font-size: 0.85rem;
    color: var(--merch-text-muted);
    max-width: 350px;
    margin: 0 auto;
    line-height: 1.4;
  }

  .merch-hero__scroll-indicator {
    display: none;
  }

  /* ═══════════════════════════════════════════════════════════════
     CONTAINER
     ═══════════════════════════════════════════════════════════════ */
  .merch-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 2rem 5rem;
  }

  /* ═══════════════════════════════════════════════════════════════
     PRODUCTS GRID
     ═══════════════════════════════════════════════════════════════ */
  .merch-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     PRODUCT CARD - Premium Horizontal Style
     ═══════════════════════════════════════════════════════════════ */
  .merch-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    text-decoration: none;
    background: linear-gradient(135deg, #141414 0%, #0f0f0f 100%);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    cursor: pointer;
  }

  .merch-card:hover {
    border-color: rgba(34, 197, 94, 0.3);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
    transform: translateY(-4px);
  }

  /* Image Wrapper */
  .merch-card__image-wrapper {
    position: relative;
    background: linear-gradient(180deg, #1a1a1a 0%, #111 100%);
    overflow: hidden;
    min-height: 350px;
  }

  .merch-card__badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    z-index: 3;
    background: #22C55E;
    color: #fff;
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.4rem 0.8rem;
    border-radius: 2px;
  }

  .merch-card__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .merch-card:hover .merch-card__image {
    transform: scale(1.05);
  }

  /* Card Info */
  .merch-card__info {
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 2;
  }

  .merch-card__title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--merch-text);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .merch-card__description {
    font-size: 0.95rem;
    color: var(--merch-text-muted);
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .merch-card__price-row {
    margin-bottom: 1.5rem;
  }

  .merch-card__price {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--merch-text);
  }

  .merch-card__buttons {
    display: flex;
    gap: 1rem;
    margin-top: auto;
  }

  .merch-card__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    padding: 1rem 1.5rem;
    border-radius: 6px;
    transition: all 0.3s ease;
    flex: 1;
  }

  .merch-card__btn--primary {
    background: #22C55E;
    color: #fff;
  }

  .merch-card__btn--primary:hover {
    background: #16A34A;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(34, 197, 94, 0.4);
  }

  .merch-card__btn--secondary {
    background: rgba(255, 255, 255, 0.08);
    color: var(--merch-text);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .merch-card__btn--secondary:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  /* Mobile: Stack vertically */
  @media (max-width: 700px) {
    .merch-card {
      grid-template-columns: 1fr;
    }
    .merch-card__image-wrapper {
      min-height: 280px;
    }
    .merch-card__info {
      padding: 1.5rem;
    }
    .merch-card__title {
      font-size: 1.25rem;
    }
    .merch-card__price {
      font-size: 1.5rem;
    }
    .merch-card__buttons {
      flex-direction: column;
    }
  }

  .merch-card__btn--disabled {
    background: rgba(255, 255, 255, 0.1);
    color: var(--merch-text-muted);
    box-shadow: none;
    cursor: not-allowed;
  }

  .merch-card__btn--disabled:hover {
    transform: none;
    box-shadow: none;
  }

  /* ═══════════════════════════════════════════════════════════════
     EMPTY STATE
     ═══════════════════════════════════════════════════════════════ */
  .merch-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem;
    text-align: center;
  }

  .merch-empty svg {
    width: 80px;
    height: 80px;
    color: rgba(255, 255, 255, 0.1);
    margin-bottom: 1.5rem;
  }

  .merch-empty p {
    color: var(--merch-text-muted);
    font-size: 1rem;
  }

  /* ═══════════════════════════════════════════════════════════════
     COMING SOON BANNER
     ═══════════════════════════════════════════════════════════════ */
  .merch-coming-soon {
    margin-top: 4rem;
    background: var(--merch-surface);
    border: 1px solid var(--merch-border);
    border-radius: 20px;
    padding: 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .merch-coming-soon::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 60% 100% at 50% 0%, rgba(34, 197, 94, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .merch-coming-soon__content {
    position: relative;
    z-index: 2;
  }

  .merch-coming-soon__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: rgba(228, 44, 44, 0.1);
    border: 1px solid rgba(228, 44, 44, 0.2);
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  .merch-coming-soon__icon svg {
    width: 28px;
    height: 28px;
    color: var(--merch-primary);
  }

  .merch-coming-soon h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--merch-text);
    margin: 0 0 0.75rem 0;
  }

  .merch-coming-soon p {
    font-size: 0.95rem;
    color: var(--merch-text-muted);
    margin: 0 0 1.5rem 0;
    max-width: 400px;
    margin-inline: auto;
  }

  .merch-coming-soon__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #E1306C 0%, #C13584 50%, #833AB4 100%);
    color: #fff;
    font-size: 0.8rem;
    font-weight: 600;
    text-decoration: none;
    padding: 0.875rem 1.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .merch-coming-soon__btn svg {
    width: 18px;
    height: 18px;
  }

  .merch-coming-soon__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(193, 53, 132, 0.4);
  }

  /* ═══════════════════════════════════════════════════════════════
     NEWSLETTER SECTION
     ═══════════════════════════════════════════════════════════════ */
  .merch-newsletter {
    background: var(--merch-surface);
    border-top: 1px solid var(--merch-border);
    padding: 5rem 2rem;
  }

  .merch-newsletter__container {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .merch-newsletter__content h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--merch-text);
    margin: 0 0 0.75rem 0;
  }

  .merch-newsletter__content p {
    font-size: 1rem;
    color: var(--merch-text-muted);
    margin: 0 0 2rem 0;
  }

  .merch-newsletter__form {
    display: flex;
    gap: 0.75rem;
    max-width: 450px;
    margin: 0 auto;
  }

  .merch-newsletter__form input {
    flex: 1;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--merch-border);
    color: var(--merch-text);
    font-size: 0.95rem;
    padding: 1rem 1.5rem;
    border-radius: 100px;
    outline: none;
    transition: all 0.3s ease;
  }

  .merch-newsletter__form input:focus {
    border-color: var(--merch-primary);
    background: rgba(228, 44, 44, 0.05);
  }

  .merch-newsletter__form input::placeholder {
    color: var(--merch-text-muted);
  }

  .merch-newsletter__form button {
    background: var(--merch-gradient);
    border: none;
    color: #fff;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 1rem 2rem;
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(228, 44, 44, 0.3);
    white-space: nowrap;
  }

  .merch-newsletter__form button:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(228, 44, 44, 0.5);
  }

  /* ═══════════════════════════════════════════════════════════════
