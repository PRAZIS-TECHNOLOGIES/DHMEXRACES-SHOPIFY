{% comment %}
  MERCH OFICIAL - Premium Aesthetic Section
  Pagina para mostrar jerseys, gorras y merchandise oficial DHMEXRACES
{% endcomment %}

<section class="merch-oficial" data-aos="fade-in">
  <!-- Hero Banner -->
  <div class="merch-hero">
    <div class="merch-hero__bg"></div>
    <div class="merch-hero__content" data-aos="fade-up" data-aos-delay="200">
      <span class="merch-hero__badge">{{ section.settings.badge_text }}</span>
      <h1 class="merch-hero__title">{{ section.settings.title }}</h1>
      <p class="merch-hero__subtitle">{{ section.settings.subtitle }}</p>
    </div>
    <div class="merch-hero__scroll-indicator">
      <span></span>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="merch-container">
    <!-- Products Grid -->
    <div class="merch-grid">
      {% for block in section.blocks %}
        {% if block.type == 'product' %}
          {% assign linked_product = all_products[block.settings.product_handle] %}
          <a href="{{ linked_product.url | default: '#' }}" class="merch-card"
               data-aos="fade-up"
               data-aos-delay="{{ forloop.index | times: 100 }}">
            <div class="merch-card__image-wrapper">
              {% if block.settings.badge != blank %}
                <span class="merch-card__badge">{{ block.settings.badge }}</span>
              {% endif %}
              {% if linked_product.featured_image %}
                <img src="{{ linked_product.featured_image | image_url: width: 600 }}"
                     alt="{{ linked_product.title }}"
                     class="merch-card__image"
                     loading="lazy">
              {% elsif block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 600 }}"
                     alt="{{ block.settings.title }}"
                     class="merch-card__image"
                     loading="lazy">
              {% endif %}
            </div>
            <div class="merch-card__info">
              <h3 class="merch-card__title">{{ linked_product.title | default: block.settings.title }}</h3>
              <p class="merch-card__description">{{ block.settings.description }}</p>
              <div class="merch-card__price-row">
                <span class="merch-card__price">
                  {% if linked_product.price %}
                    {{ linked_product.price | money }}
                  {% elsif block.settings.price != blank %}
                    ${{ block.settings.price }} MXN
                  {% else %}
                    Proximamente
                  {% endif %}
                </span>
              </div>
              <div class="merch-card__buttons">
                <span class="merch-card__btn merch-card__btn--primary">
                  Ver Producto
                </span>
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Coming Soon Banner -->
    {% if section.settings.show_coming_soon %}
      <div class="merch-coming-soon" data-aos="fade-up">
        <div class="merch-coming-soon__content">
          <h3>{{ section.settings.coming_soon_title }}</h3>
          <p>{{ section.settings.coming_soon_text }}</p>
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" target="_blank" class="merch-coming-soon__btn">
              <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18">
