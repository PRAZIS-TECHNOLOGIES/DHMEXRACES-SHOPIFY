      "label": "Logo Width",
      "default": 300
    },
    {
      "type": "header",
      "content": "Texto"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "El Campeonato Nacional de Downhill"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Temporada 2026"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descripción",
      "default": "<p>DHMEXRACES es el campeonato de Downhill más importante de México. Cinco sedes, los mejores riders y la adrenalina al máximo.</p>"
    },
    {
      "type": "header",
      "content": "Botón"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del Botón",
      "default": "Ver Fechas"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link del Botón"
    },
    {
      "type": "header",
      "content": "Colores"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de Fondo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Color del Título",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Color del Subtítulo",
      "default": "#E42C2C"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del Texto",
      "default": "#CCCCCC"
    }
  ],
  "presets": [
    {
      "name": "Brand Showcase",
      "category": "DHMEXRACES"
    }
  ]
}
{% endschema %}
