{% comment %}
  Race Dates Section for DHMEXRACES
{% endcomment %}

<section class="race-dates" id="fechas">
  <div class="race-dates__container">
    {% if section.settings.title != blank %}
      <h2 class="race-dates__title" data-aos="fade-up">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="race-dates__subtitle" data-aos="fade-up" data-aos-delay="100">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="race-dates__grid">
      {% for block in section.blocks %}
        <div class="race-card" data-aos="fade-up" data-aos-delay="{{ forloop.index | times: 100 }}" {{ block.shopify_attributes }}>
          {% if block.settings.status == 'upcoming' %}
            <div class="race-card__badge race-card__badge--upcoming">Próximamente</div>
          {% elsif block.settings.status == 'open' %}
            <div class="race-card__badge race-card__badge--open">Inscripciones Abiertas</div>
          {% elsif block.settings.status == 'closed' %}
            <div class="race-card__badge race-card__badge--closed">Inscripciones Cerradas</div>
          {% endif %}

          {% if block.settings.image != blank %}
            <div class="race-card__image">
              {{ block.settings.image | image_url: width: 600 | image_tag: class: 'race-card__img', loading: 'lazy' }}
            </div>
          {% endif %}

          <div class="race-card__content">
            <div class="race-card__header">
              {% if block.settings.round != blank %}
                <span class="race-card__round">{{ block.settings.round }}</span>
              {% endif %}
              <h3 class="race-card__name">{{ block.settings.race_name }}</h3>
            </div>

            <div class="race-card__details">
              {% if block.settings.date != blank %}
                <div class="race-card__detail">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15.8333 3.33337H4.16667C3.24619 3.33337 2.5 4.07957 2.5 5.00004V16.6667C2.5 17.5872 3.24619 18.3334 4.16667 18.3334H15.8333C16.7538 18.3334 17.5 17.5872 17.5 16.6667V5.00004C17.5 4.07957 16.7538 3.33337 15.8333 3.33337Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M13.3333 1.66663V4.99996" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M6.66675 1.66663V4.99996" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2.5 8.33337H17.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{{ block.settings.date }}</span>
                </div>
              {% endif %}

              {% if block.settings.location != blank %}
                <div class="race-card__detail">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.5 8.33337C17.5 14.1667 10 19.1667 10 19.1667C10 19.1667 2.5 14.1667 2.5 8.33337C2.5 6.34425 3.29018 4.4366 4.6967 3.03007C6.10322 1.62355 8.01088 0.833374 10 0.833374C11.9891 0.833374 13.8968 1.62355 15.3033 3.03007C16.7098 4.4366 17.5 6.34425 17.5 8.33337Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M10 10.8334C11.3807 10.8334 12.5 9.71408 12.5 8.33337C12.5 6.95266 11.3807 5.83337 10 5.83337C8.61929 5.83337 7.5 6.95266 7.5 8.33337C7.5 9.71408 8.61929 10.8334 10 10.8334Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{{ block.settings.location }}</span>
                </div>
              {% endif %}

              {% if block.settings.elevation != blank %}
                <div class="race-card__detail">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2.5 17.5L7.5 12.5L11.6667 16.6667L17.5 7.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12.5 7.5H17.5V12.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <span>{{ block.settings.elevation }}</span>
                </div>
              {% endif %}
            </div>

            {% if block.settings.description != blank %}
              <p class="race-card__description">{{ block.settings.description }}</p>
            {% endif %}

            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="race-card__button">
                {{ block.settings.button_label }}
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4.16675 10H15.8334" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M10 4.16663L15.8333 9.99996L10 15.8333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .race-dates {
    min-height: 100vh;
    padding: 120px 20px;
    background: #000000;
    position: relative;
    overflow: hidden;
  }

  .race-dates::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle at 20% 30%, rgba(228, 44, 44, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(0, 102, 179, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }

  .race-dates__container {
    max-width: 1600px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .race-dates__title {
    font-size: clamp(3rem, 8vw, 7rem);
    font-weight: 900;
    text-align: center;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    filter: drop-shadow(0 0 40px rgba(228, 44, 44, 0.5));
  }

  .race-dates__subtitle {
    text-align: center;
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: #CCCCCC;
    margin-bottom: 5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 300;
  }

  .race-dates__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 3rem;
    justify-items: center;
    justify-content: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  .race-card {
    position: relative;
    background: rgba(0, 0, 0, 0.8);
    border-radius: 30px;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 2px solid rgba(228, 44, 44, 0.2);
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
    width: 100%;
    max-width: 450px;
  }

  .race-card:hover {
    transform: translateY(-20px) scale(1.02);
    border-color: rgba(228, 44, 44, 0.8);
    box-shadow: 0 30px 80px rgba(228, 44, 44, 0.4),
                0 0 60px rgba(228, 44, 44, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
    background: rgba(0, 0, 0, 0.9);
  }

  .race-card__badge {
    position: absolute;
    top: 25px;
    right: 25px;
    z-index: 10;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    backdrop-filter: blur(20px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .race-card__badge--upcoming {
    background: rgba(0, 102, 179, 0.9);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .race-card__badge--open {
    background: rgba(16, 185, 129, 0.9);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.5);
    animation: pulse-badge 2s ease-in-out infinite;
  }

  @keyframes pulse-badge {
    0%, 100% { box-shadow: 0 8px 32px rgba(0, 255, 100, 0.3); }
    50% { box-shadow: 0 8px 32px rgba(0, 255, 100, 0.6), 0 0 20px rgba(0, 255, 100, 0.5); }
  }

  .race-card__badge--closed {
    background: rgba(100, 100, 100, 0.8);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .race-card__image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    position: relative;
  }

  .race-card__image::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100px;
    background: rgba(0, 0, 0, 0.6);
    pointer-events: none;
  }

  .race-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    filter: brightness(0.8) contrast(1.1);
  }

  .race-card:hover .race-card__img {
    transform: scale(1.15) rotate(2deg);
    filter: brightness(1) contrast(1.2);
  }

  .race-card__content {
    padding: 2.5rem;
  }

  .race-card__header {
    margin-bottom: 2rem;
  }

  .race-card__round {
    display: inline-block;
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 0.75rem;
  }

  .race-card__name {
    font-size: 2rem;
    font-weight: 900;
    color: #fff;
    margin: 0;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .race-card__details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .race-card__detail {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #DDDDDD;
    font-size: 1.05rem;
    font-weight: 500;
  }

  .race-card__detail svg {
    flex-shrink: 0;
    color: var(--color-primary);
    filter: drop-shadow(0 0 8px rgba(228, 44, 44, 0.5));
  }

  .race-card__description {
    color: #CCCCCC;
    line-height: 1.7;
    margin-bottom: 2rem;
    font-size: 1.05rem;
  }

  .race-card__button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.25rem 2.5rem;
    background: var(--color-secondary);
    color: #fff;
    text-decoration: none;
    border-radius: 100px;
    font-weight: 800;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    text-transform: uppercase;
    font-size: 1rem;
    letter-spacing: 0.1em;
    box-shadow: 0 10px 30px rgba(0, 102, 179, 0.3);
    overflow: hidden;
  }

  .race-card__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255,255,255,0.2);
    transition: left 0.5s;
  }

  .race-card__button:hover::before {
    left: 100%;
  }

  .race-card__button:hover {
    transform: translateY(-3px) scale(1.05);
    background: var(--color-primary);
    box-shadow: 0 15px 40px rgba(228, 44, 44, 0.5);
  }

  .race-card__button svg {
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .race-card__button:hover svg {
    transform: translateX(8px);
  }

  @media (max-width: 768px) {
    .race-dates {
      padding: 60px 15px;
    }

    .race-dates__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .race-card__content {
      padding: 1.5rem;
    }

    .race-card__badge {
      top: 15px;
      right: 15px;
      padding: 0.5rem 1rem;
      font-size: 0.75rem;
      letter-spacing: 0.05em;
    }

    .race-card__header {
      padding-right: 0;
      margin-bottom: 1.5rem;
    }

    .race-card__name {
      font-size: 1.75rem;
      padding-right: 10px;
    }
  }
{% endstylesheet %}

